{
  "include": ["client/src/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,

    "module": "ESNext",
    "moduleResolution": "bundler",

    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    "strict": true,
    "jsx": "preserve",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,

    "baseUrl": ".",
    "types": ["vite/client"],

    "paths": {
      "@/*": ["client/src/*"]
    }
  }
}
